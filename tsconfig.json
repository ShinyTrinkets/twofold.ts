{
  "include": ["src/*.ts"],
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "nodenext",
    "target": "esnext",
    "strict": true,
    "jsx": "preserve",
    "noEmit": true,
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "types": [
      "@types/bun",
      "@types/deno",
      "@types/node"
    ]
  }
}
