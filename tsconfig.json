{
  "include": ["src/*.ts"],
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "module": "NodeNext",
    "target": "ESNext",
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "types": [
      "@types/bun",
      "@types/deno",
      "@types/node"
    ]
  }
}
